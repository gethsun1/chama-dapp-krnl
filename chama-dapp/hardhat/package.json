{
  "name": "chama-dapp-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Chama Dapp with KRNL integration",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:sapphire": "hardhat run scripts/deploy-token-authority.js --network sapphire_testnet",
    "deploy:sepolia": "hardhat run scripts/deploy-chama-factory.js --network sepolia",
    "deploy:all": "npm run deploy:sapphire && npm run deploy:sepolia",
    "update-frontend": "node scripts/update-frontend.js",
    "whitelist": "hardhat run scripts/whitelist-address.js --network sepolia",
    "test": "hardhat test"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@oasisprotocol/sapphire-contracts": "^0.2.14",
    "@openzeppelin/contracts": "^5.3.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.4"
  }
}
